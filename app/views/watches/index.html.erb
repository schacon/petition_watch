<div class="create-watch">
    <a class="btn btn-success" href="/watches/new">Create a New Watch</a>
</div>

<% if @watches.count == 0 %>
  <h1>You Have No Watches</h1>
<% else %>
  <h1>My Watches</h1>

  <div class="row-fluid marketing">
    <div class="span6">
      <% @watches.each do |watch| %>
        <h4><%= watch.term %></h4>
      <% end %>
    </div>
  </div>
<% end %>